{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "cd backend && npm ci && npm run build"
  },
  "deploy": {
    "startCommand": "cd backend && node dist/index.js",
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 3
  }
}
