# Production Environment Variables
# Copy this to .env.local for local development

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://campusflow.coventry.ac.uk
NEXT_PUBLIC_SITE_NAME="CampusFlow"
NEXT_PUBLIC_SITE_DESCRIPTION="AI-powered student assistant for Coventry University"

# Supabase Configuration (Production)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key

# Analytics (Production)
NEXT_PUBLIC_GA_TRACKING_ID=GA_MEASUREMENT_ID
NEXT_PUBLIC_GTM_ID=GTM_CONTAINER_ID

# Backend API (Production)
NEXT_PUBLIC_BACKEND_URL=https://studentassistant-production.up.railway.app

# Security
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=https://campusflow.coventry.ac.uk

# Email (Production)
SMTP_HOST=smtp.coventry.ac.uk
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=warn